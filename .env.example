# Environment Configuration
DJANGO_ENVIRONMENT=development  # Options: development, production

# Database Configuration
DB_NAME=sistema_polinizacion
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer
DB_CONN_MAX_AGE=60

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# API Testing Configuration (Development Only)
# Set to True to enable public API access without authentication for testing
# WARNING: Never set to True in production!
ENABLE_PUBLIC_API_TESTING=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
# Development settings (longer tokens for easier testing)
JWT_ACCESS_TOKEN_LIFETIME_HOURS=24
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
# Production settings (shorter tokens for security)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_HOURS=24

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# CORS Configuration (Production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration (Production)
API_BASE_URL=https://api.sistema-polinizacion.com

# Logging Configuration (Production)
LOG_FILE_PATH=/var/log/sistema_polinizacion/django.log
ERROR_LOG_FILE_PATH=/var/log/sistema_polinizacion/errors.log
BUSINESS_ERROR_LOG_FILE_PATH=/var/log/sistema_polinizacion/business_errors.log
VALIDATION_LOG_FILE_PATH=/var/log/sistema_polinizacion/validation.log

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cache Configuration (Production)
REDIS_CACHE_URL=redis://localhost:6379/1

# Session Configuration (Production)
SESSION_COOKIE_AGE=3600

# File Upload Configuration
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_MEMORY_SIZE=2621440

# Database Pool Configuration (Production)
USE_DB_POOL=False
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Monitoring Configuration (Production)
USE_SENTRY=False
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production
APP_VERSION=1.0.0

# Health Check Configuration
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100

# Rate Limiting Configuration
RATELIMIT_ENABLE=True

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_STORAGE=local
BACKUP_RETENTION_DAYS=30